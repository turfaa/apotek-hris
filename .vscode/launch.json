{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serve HTTP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["serve"],
        },
        {
            "name": "Run DB Migrations",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["migrate", "up"],
        }
    ]
}